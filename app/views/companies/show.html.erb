<p id="notice"><%= notice %></p>

<p>
  <strong>Company Name:</strong>
  <%= @company.name %>
</p>

<div>
<h4>phone numbers</h4>
<ul id="phone-numbers">
  <% @company.phone_numbers.each do |phone_number| %>
    <li>
      <span><%= phone_number.number %></span>
      <span><%= link_to('edit', edit_phone_number_path(phone_number)) %></span>
      <span><%= link_to('delete', phone_number_path(phone_number), :method => "delete", :class => "delete-phone") %></span>
    </li>
  <% end %>
</ul>
<p><%= link_to "Add a phone number", new_phone_number_path(contact_id: @company.id, contact_type: "Company") %></p>
</div>

<%= link_to 'Edit', edit_company_path(@company) %> |
