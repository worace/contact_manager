<p id="notice"><%= notice %></p>

<p>
  <strong>First name:</strong>
  <%= @person.first_name %>
</p>

<p>
  <strong>Last name:</strong>
  <%= @person.last_name %>
</p>

<%= render 'phone_numbers/phone_numbers', :phone_numbers => @person.phone_numbers %>
<p><%= link_to "Add a phone number", new_phone_number_path(contact_id: @person.id, contact_type: "Person") %></p>

<%= render 'email_addresses/email_addresses', :email_addresses => @person.email_addresses %>
<p><%= link_to "Add an email address", new_email_address_path(contact_id: @person.id, contact_type: "Person") %></p>

<%= link_to 'Edit', edit_person_path(@person) %> |
<%= link_to 'Back', people_path %>
